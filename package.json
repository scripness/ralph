{
  "name": "@scripness/ralph",
  "version": "1.0.0",
  "description": "Autonomous AI agent loop for implementing PRD stories with Amp",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "ralph": "dist/cli.js"
  },
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build src/cli.ts --outdir dist --target node --format esm",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "test": "bun test",
    "prepublishOnly": "bun run build"
  },
  "files": [
    "dist",
    "templates"
  ],
  "keywords": [
    "amp",
    "ai",
    "agent",
    "prd",
    "autonomous",
    "development",
    "cli"
  ],
  "author": "scripness",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/scripness/ralph"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/bun": "^1.2.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0"
  }
}
